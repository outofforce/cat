        <div class="page-header">
			  <b>任务通知栏</b>
        </div>
        <div class="span6">

<% __INPUT.tasks.forEach(function(item, index) { %>

<div class="row" style="margin-bottom: 15px;">

<div   style="padding: 0px;margin: 0px;border: 1px solid #ddd;">
<% if (item.taskAttr == 'recieve' ) { %>
                    <div style="border: 0px ;padding: 0px;margin: 0px 0px 5px 0px;background:#eee;">
					 <h5 style="border: 0px ;padding: 5px;margin: 0px;"><%= item.taskWorker %> 认领了<%= item.taskOwner %> 的任务  </h5>
					 <div style="float:right;"><small><%= item.time_str %>更新<span class="icon-bar"></span></small></div>
					</div>
					<p style="padding: 5px 5px 5px 5px;">
						<span class="icon-bar"></span>
						任务:[<%= item.taskName%>]
					</p>
<% } else if (item.taskAttr == 'assign') { %>
					<div style="border: 0px ;padding: 0px;margin: 0px 0px 5px 0px;background:#eee;">
                    	<h5 style="border: 0px ;padding: 5px;margin: 0px;"><%= item.taskOwner %> 派发任务给 <%= item.taskWorker%> </h5>
                        <div style="float:right;"><small><%= item.time_str %>更新<span class="icon-bar"></span></small></div>
                    </div>
					<p style="padding: 5px 5px 5px 5px;">
						<span class="icon-bar"></span>
						任务:[ <%= item.taskName%> ]
					</p>

<% } else { %>
					<div style="border: 0px ;padding: 0px;margin: 0px 0px 5px 0px;background:#eee;">
                            <h5 style="border: 0px ;padding: 5px;margin: 0px;"><%= item.taskOwner %> 发布任务了 </h5>
                                                <div style="float:right;"><small><%= item.time_str %>更新<span class="icon-bar"></span></small></div>
                    </div>
					<p style="padding: 5px 5px 5px 5px;">
						<span class="icon-bar"></span>
						任务:[ <%= item.taskName %> ]  <br>
						<span class="icon-bar"></span>
						描述:[ <%= item.taskDesc %> ]
                         <% if (item.relaPname != '*') { %>
						<span class="icon-bar"></span>
						<a href="/pDetail?project_id=<%= item.relaPname %>"><span class="label label-warning"><%= item.relaPname %></span></a>
                          <% } %>

					</p>

<% if (item.img != "*") { %> 
					<img style="padding: 5px 5px 5px 5px;" src="<%= item.img %>" />
<% } %>





<% } %>

                    <p class="text-right" style="border: 0px ;padding: 0px;margin: 1px 10px 1px 5px;">
                    <small>

                                                                    <% if (item.taskStatus == 'open' && item.taskAttr=='waitFor') { %>
                    <a href="/recieveTask?task=<%= item.id%>" class="text-warning" >认领</a>
                    <span class="icon-bar" style="text-align: center;">|</span>
                                                                    <% } else if (item.taskStatus == 'finish') { %>
                    <a href="#" class="text-success" >完成</a>
                    <span class="icon-bar" style="text-align: center;">|</span>
                                                                    <% } %>


                    <a href="#">动态(9)</a>
                    <span class="icon-bar" style="text-align: center;">|</span>
                    <a href="/taskDetail?task=<%= item.id%>">详细</a>
                    </small>
                    </p>

</div>

</div>

<%}) %>





</div>

